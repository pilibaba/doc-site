#footer
  clearfix()
  padding: 40px 0
  color: #666
  font-family: font-title
  position: relative
  background: color-easywechat
  text-align: center
  @media mq-normal
    text-align: left
  @media print
    display: none
  a
    color: inherit
    text-decoration: none
    transition: 0.2s
    &:hover
      color: #333

#footer-copyright
  line-height: 1.4
  @media mq-normal
    float: left
  a
    font-weight: 500

#footer-links
  margin-top: 1em
  @media mq-normal
    float: right
    margin-top: 0

.footer-link
  font-size: 30px
  margin-left: 20px
  &:first-child
    margin-left: 0

.friend-links
  text-align: center;
  padding-bottom: 20px;
  a
    margin-right: 10px